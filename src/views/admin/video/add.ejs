<%- include('../layout/header') %>
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">			    
            <h1 class="app-page-title">Tambah Link Video</h1>
            <hr class="mb-4">
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <div class="row g-4 settings-section">
                <div class="col-12 col-md-8">
                    <div class="app-card app-card-settings shadow-sm p-4">
                        <div class="app-card-body">
                            <form class="settings-form" action="/admin/videos/store" method="POST">
                                <div class="mb-3">
                                    <label for="v_link" class="form-label">Link Video</label>
                                    <input type="text" class="form-control" id="v_link" name="v_link" required>
                                </div>
                                <div class="mb-3">
                                    <label for="judul" class="form-label">Judul</label>
                                    <input type="text" class="form-control" id="judul" name="judul" required>
                                </div>
                                <div class="mb-3">
                                    <label for="channel" class="form-label">Nama Channel</label>
                                    <input type="text" class="form-control" id="channel" name="channel" required>
                                </div>
                                <div class="mb-3">
                                    <label for="duration" class="form-label">Durasi</label>
                                    <input type="text" class="form-control" id="duration" name="duration" placeholder="Contoh: 15:30" required>
                                </div>
                                <div class="mb-3">
                                    <label for="difficulty" class="form-label">Tingkat Kesulitan</label>
                                    <select class="form-control" id="difficulty" name="difficulty">
                                        <option value="Beginner">Beginner</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Advanced">Advanced</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn app-btn-primary">Save Changes</button>
                            </form>
                        </div><!--//app-card-body-->
                    </div><!--//app-card-->
                </div>
            </div><!--//row-->
        </div><!--//container-fluid-->
    </div><!--//app-content-->
</div>
<%- include('../layout/footer') %>
