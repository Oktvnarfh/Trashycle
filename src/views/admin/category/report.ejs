<%- include('../layout/header') %>
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <h1 class="app-page-title">Laporan Penjualan Sampah</h1>
            <div class="table-responsive mt-4">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Jenis Sampah</th>
                            <th>Harga Per Kg</th>
                            <th>Total Penjualan</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data.length > 0) { %>
                            <% data.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= row.jenis_sampah %></td>
                                    <td>Rp <%= row.harga_perkilo.toLocaleString() %></td>
                                    <td>Rp <%= row.total_penjualan.toLocaleString() %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">Tidak ada data penjualan.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="mt-3">
                    <button onclick="window.print()" class="btn btn-primary">Print Laporan</button>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layout/footer') %>