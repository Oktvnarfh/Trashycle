<%- include('layout/header') %>

<div class="section section-4">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class=" mb-3">Panduan Daur Ulang</h1>
        </div>
        <% if (tip) { %>
                <div class="row mb-5">
                    <div class="col-lg-10">
                        <h2 class="font-weight-bold heading text-primary mb-4"><%= tip.name %></h2>
                        <p class="text-black-50"><%= tip.description %></p>
                    </div>
                </div>
                
                <div class="row justify-content-between mb-5">
                    <div class="col-lg-6 mb-5 mb-lg-0 order-lg-2">
                        <div class="img-about dots">
                            <img src="<%= tip.image %>" alt="<%= tip.name %>" class="img-fluid">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <% for (const tipItem of tip.tips) { %>
                            <div class="d-flex feature-h">
                                <span class="wrap-icon me-3">
                                    <span class="bi bi-check"></span>
                                </span>
                                <div class="feature-text">
                                    <h3 class="heading"><%= tipItem.nameTips %></h3>
                                    <p class="text-black-50"><%= tipItem.desc %></p>   
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
        <% } else { %>
            <div class="alert alert-danger">
                <strong>Error!</strong> Tip not found.
            </div>
        <% } %>
            </div>
        </div>
    </div>
<%- include('layout/footer') %>