<%- include('layout/header') %>

<header class="hero-section">
    <div class="container">
      <div class="col-auto">
        <% if (messages.error) { %>
          <div class="alert alert-danger bubble-notification"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
          <div class="alert alert-success bubble-notification"><%= messages.success %></div>
        <% } %>
      </div>
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="text-light">Welcome to Trashycle Blog</h1>
                <p class="lead">Discover amazing stories and insights</p>
                <div class="search-bar">
                    <input type="text" class="form-control" placeholder="Search articles...">
                </div>
            </div>
        </div>
    </div>
</header>
    
<main class="container py-5">
    <!-- Featured Services Section -->
    <section id="featured-blog" class="featured-blog section">
  
        <div class="container">
          <div class="row gy-4">
            <% data.forEach((article) => { %>
              <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                  <a href="/home/detail-blog/<%= article.id %>">
                      <div class="card blog-item position-relative">
                          <img src="/uploads/article/<%= article.foto %>" class="card-img-top" alt="<%= article.judul %>">
                          <div class="blog-desc">
                              <div class="icon mb-2">
                                  <i class="bi bi-person-circle icon"></i><span class="mx-2"><%= article.penulis %></span>
                              </div>
                              <h4 class="fs-6">
                                  <%= article.judul %>
                              </h4>
                              <p><%= article.isi.split(' ').slice(0, 10).join(' ') %>...</p>
                          </div>
                      </div>
                  </a>
              </div>
          <% }); %>
          </div>
        </div>
      </section><!-- /Featured Services Section -->

   
    <nav class="mt-5">
    <ul class="pagination justify-content-center">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item active"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
    </nav>
    </main>

<%- include('layout/footer') %>  