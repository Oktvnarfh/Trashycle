<%- include('layout/header') %>

<header class="text-center hero-section" >
    <h1 class="text-light">Panduan Daur Ulang Sampah</h1>
    <p class="lead">Pelajari cara memilah dan mendaur ulang berbagai jenis sampah dengan benar</p>
</header>

<div class="container py-5">
    <div class="row g-4">
        <% const categories = [
        { type: "Organik", data: panduan.organik },
        { type: "Anorganik", data: panduan.anorganik },
        { type: "B3", data: panduan.b3 }
    ]; %>
    
    <% for (const category of categories) { %>
        <% for (const item of category.data) { %>
            <div class="col-md-4">
                <div class="card h-100 recycling-card">
                    <a href="/home/tips/<%= item.id %>">
                        <img src="<%= item.image %>" class="card-img-top" alt="<%= item.name %>">
                        <div class="card-body">
                            <!-- Badge kategori -->
                            <span class="badge 
                                <%= category.type === 'Organik' ? 'bg-success' : 
                                    category.type === 'Anorganik' ? 'bg-primary' : 
                                    'bg-danger' %>">
                                <%= category.type %>
                            </span>
                            
                            <h5 class="card-title mt-2"><%= item.name %></h5>
                            <p class="card-text"><%= item.description.split(' ').slice(0, 10).join(' ') %>...</p>
                        </div>
                    </a>
                </div>
            </div>
        <% } %>
    <% } %>
