<%- include('layout/header') %>
<div class="app app-login p-0">    	
  <div class="g-0 app-auth-wrapper">
      <div class="text-center p-5">
          <div class="d-flex flex-column align-content-end">
              <div class="app-auth-body mx-auto my-5">
                <div class="col-auto">
                    <% if (messages.error) { %>
                      <div class="alert alert-danger bubble-notification"><%= messages.error %></div>
                    <% } %>
                    <% if (messages.success) { %>
                      <div class="alert alert-success bubble-notification"><%= messages.success %></div>
                    <% } %>
                  </div>
                  <div class="app-auth-branding mb-4"><a class="app-logo" href="index.html"><img class="me-2" src="/images/logo.png" alt="logo" width="150" height="150"></a></div>
                  <div class="auth-form-container text-start">
                      <form class="auth-form login-form" action="/home/login" method="POST">         
                          <div class="email mb-3">
                              <label class="sr-only" for="signin-email">Username</label>
                              <input id="signin-email" name="username" type="text" class="form-control signin-email" placeholder="Masukkan Username Anda" required="required">
                          </div><!--//form-group-->
                          <div class="password mb-3">
                              <label class="sr-only" for="signin-password">Password</label>
                              <input id="signin-password" name="password" type="password" class="form-control signin-password" placeholder="Masukkan Password Anda" required="required">
                          </div><!--//form-group-->
                          <div class="text-center">
                              <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto" style="background-color: #3F5762; border-color: #3F5762;">Log In</button>
                          </div>
                          <div class="text-center p-2">
                            <p>Belum punya akun? <a href="/home/register">Register di sini</a></p>
                          </div>
                      </form>
                  </div><!--//auth-form-container-->	

              </div><!--//auth-body-->
          </div><!--//flex-column-->   
      </div><!--//auth-main-col-->
</div>